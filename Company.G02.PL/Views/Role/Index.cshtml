@model IEnumerable<RoleToReturnDto>
<form>
    <div class="container mt-5 p-3 w-75">
        <div class=" row mx-auto">
            <div class="col-6">
                <input  placeholder="Search By  Name" name="SearchInput" class="form-control" />
            </div>
            <div class="col-6">
                <button type="submit" class="btn btn-success ">Search</button>
            </div>
        </div>
    </div>
</form>
    <h1>All Roles</h1>

    <br />

    <br />

<a asp-action="Create" class="btn btn-primary">Create Role</a>

    <br />
    <br />

@if(Model.Count()>0)
{
    <table class="table table-hover table-striped table-sm ">
        <thead>
            <tr>
                <th>ID</th>
                <th>User Name</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Role</th>

            </tr>
        </thead>
        <tbody >
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <partial name="_buttonPV" model="@item.Id" />

                </tr>
            }
        </tbody>
    </table>
    
}else{
<h4 class="mt-4 alert alert-info">No Users Found :(</h4>
}




