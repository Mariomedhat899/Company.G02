@model IEnumerable<Employee>
<form>
    <div class="container mt-5 p-3 w-75">
        <div class=" row mx-auto">
            <div class="col-6">
                <input  placeholder="Search By  Name" name="SearchInput" class="form-control" />
            </div>
            <div class="col-6">
                <button type="submit" class="btn btn-success ">Search</button>
            </div>
        </div>
    </div>
</form>
    <h1>All Employee</h1>

    <br />

    <br />

    <a asp-action="Create" class="btn btn-primary">Create Employee</a>

    <br />
    <br />

@if(Model.Count()>0)
{
    <table class="table table-hover table-striped table-sm ">
        <thead>
            <tr>
                <th>IMG</th>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Department</th>
                <th>Salary</th>
                <th>Is Active</th>
                <th>Is Deleted</th>
                <th>@Html.DisplayNameFor(E => E.CreateAt)</th>
                <th>@Html.DisplayNameFor(E => E.HireDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody >
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/Files/Images/@item.IMGName" class="w-100 img-fluid rounded-1" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>
                        @{
                            if(item.Department is not null)
                            {
                                @item.Department.Name

                            }
                            else
                            {
                                <text> No Department </text>

                                
                            }
                        }
                    </td>
                    <td>@item.Salary</td>
                    <td>@item.IsActive</td>
                    <td>@item.IsDeleted</td>
                    <td>@item.CreateAt</td>
                    <td>@item.HireDate</td>
                    <partial name="_buttonPV" model="@item.Id.ToString()" />

                </tr>
            }
        </tbody>
    </table>
    
}else{
<h4 class="mt-4 alert alert-info">No Employee Found :(</h4>
}




