@model SignInDto

@{
	ViewData["Title"] = "SignIn";
	Layout = "~/Views/Shared/_Auth.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="m-1  text-danger text-center text-capitalize rounded-3 p-2"></div>
		<form asp-action="SignIn">
			<input class="text email mb-4" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim mt-4">
					<input asp-for="RememberMe" class="checkbox " >
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="Sign In">
		</form>
		<a asp-action="ForgetPassword" class="btn btn-dark px-3 mx-auto d-block mb-3"> Forgotten Password?</a>

		<p>Don't have an Account? <a asp-action="SignUp"> Register Now!</a></p>
	</div>
</div>



@section ValidationSection {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}