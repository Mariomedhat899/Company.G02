
@model SignUpDto 

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="m-1  text-danger text-center text-capitalize rounded-3 p-2" ></div>
		<form asp-action="SignUp">
			<input class="text mb-4" asp-for="Username" placeholder="Username" required="" >
			<input class="text mb-4 " asp-for="FName" placeholder="First Name" required="">
			<input class="text mb-4" asp-for="LName" placeholder="Last Name" required="">
			<input class="text email mb-4" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<input class="text w3lpass mb-4" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" class="checkbox mb-4 " required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
	</div>
</div>



			@section ValidationSection {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}