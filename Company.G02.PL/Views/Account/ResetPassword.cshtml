@model ResetPasswordDto
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Auth.cshtml";
}


<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="m-1  text-danger text-center text-capitalize rounded-3 p-2"></div>
		<form asp-action="ResetPassword">
			<input class="text" asp-for="NewPassword" placeholder="Enter Your New Password" required="">
			<input class="text w3lpass mb-4" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			
			<input type="submit" value="Reset Password">
		</form>
		<p>Don't have an Account? <a asp-action="SignIn"> Sign In Now!</a></p>
	</div>
</div>



@section ValidationSection {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
